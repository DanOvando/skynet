  journal = {Journal of Experimental Marine Biology and Ecology},
  author = {Stuart-Smith, Rick D. and Barrett, Neville S. and Crawford, Christine M. and Frusher, Stewart D. and Stevenson, David G. and Edgar, Graham J.},
  month = oct,
